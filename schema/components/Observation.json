{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/firstmile/reference-framework/master/schema/components/Observation.json",
  "definitions": {
    "observation": {
      "title": "Observation",
      "type": "object",
      "required": [
        "00_cropObservationRecordGlobalID",
        "01_cropObservationInternalID",
        "02_cropObservationDescription",
        "03_cropObservationGeometry"
        
      ],
      "Foreignkey": [
        "04_plotInternalID"
      ],
      "description": "Schema for the description of a crop observation ",
      "primarykey": [
        "00_observationRecordGlobalID"
      ],
      "properties": {
        
        "00_observationRecordGlobalID": {
          "$ref": "#/definitions/GlobalID",
          "description": "Globally Unique ID of the recording of the cropObservation at a specific time and by a specific organisation.",
          "title": "Global cropObservation Record ID"
        },
        "01_observationInternalID": {
          "description": "Internal Identification number of the plot",
          "title": "plotInternalID",
          "type": "string"
        }
        "02_bservationDescription": {
          "description": "Description of het crop observation",
          "title": "Description of het crop observation",
          "type": "string"
        },
        "03_bservationGeometry": {
          "description": "Geometry of the Observation as measured",
          "oneOf": [
            {
              "properties": {
                "coordinates": {
                  "$ref": "#/definitions/position"
                },
                "type": {
                  "enum": [
                    "Point"
                  ]
                }
              },
              "title": "Point"
            },
            {
              "properties": {
                "coordinates": {
                  "$ref": "#/definitions/lineString"
                },
                "type": {
                  "enum": [
                    "LineString"
                  ]
                }
              },
              "title": "LineString"
            },
            {
              "properties": {
                "coordinates": {
                  "$ref": "#/definitions/polygon"
                },
                "type": {
                  "enum": [
                    "Polygon"
                  ]
                }
              },
              "title": "Polygon"
            }
          ],
          "required": [
            "type",
            "coordinates"
          ],
          "title": "CropObservationGeometry",
          "type": "object"
        }
      }
    }
  }
}
